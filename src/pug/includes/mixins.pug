mixin card(imageUrl, imageAlt, title, subtitle, content, linkUrl, linkText)
	li.card(aria-label="Карточка")
		img(src=imageUrl, alt=imageAlt, width="312", height="148").card__image
		h3.card__title= title
		if subtitle
			p.card__subtitle= subtitle
		if content
			p.card__content= content
		a(href=linkUrl).card__link= linkText
